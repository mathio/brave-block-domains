{
  "name": "Block Domains",
  "description": "Block access to domains to prevent accidentally visiting them.",
  "version": "1.0",
  "manifest_version": 3,
  "author": "https://github.com/mathio",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "index.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
